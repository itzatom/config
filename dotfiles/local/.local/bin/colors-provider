#!/bin/bash
# Provides colors from .Xresouces file. Use this script for others scripts.

# Color directory:
CD="$HOME/.Xresources"

# Greppin' colours:

background=`cat ${CD} | grep -i background: | tail -c 8`
foreground=`cat ${CD} | grep -i foreground: | tail -c 8`



BLACK=`cat ${CD} | grep -i color0: | tail -c 8`
LBLACK=`cat ${CD} | grep -i color8: | tail -c 8`


RED=`cat ${CD} | grep -i color1: | tail -c 8`
LRED=`cat ${CD} | grep -i color9: | tail -c 8`

GREEN=`cat ${CD} | grep -i color2: | tail -c 8`
LGREEN=`cat ${CD} | grep -i color10: | tail -c 8`

YELLOW=`cat ${CD} | grep -i color3: | tail -c 8`
LYELLOW=`cat ${CD} | grep -i color11: | tail -c 8`

BLUE=`cat ${CD} | grep -i color4: | tail -c 8`
LBLUE=`cat ${CD} | grep -i color12: | tail -c 8`

MAGENTA=`cat ${CD} | grep -i color5: | tail -c 8`
LMAGENTA=`cat ${CD} | grep -i color13: | tail -c 8`

CYAN=`cat ${CD} | grep -i color6: | tail -c 8`
LCYAN=`cat ${CD} | grep -i color14: | tail -c 8`

WHITE=`cat ${CD} | grep -i color7: | tail -c 8`
LWHITE=`cat ${CD} | grep -i color15: | tail -c 8`

## SHELLS VARS
export TERM="xterm-256color"
export EDITOR="vim"
export VISUAL="vim"

## HISTORY VARS
export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=9999
export SAVEHIST=$HISTSIZE

## LANG VARS
#export LANG=it_IT.UTF-8

## ZSH VARS
ENABLE_CORRECTION="true"
HIST_STAMPS="dd.mm.yyyy"

#ANTIBODY VARS
ANTIBODY_HOME=`antibody home`
ZSH="${ANTIBODY_HOME}/https-COLON--SLASH--SLASH-github.com-SLASH-robbyrussell-SLASH-oh-my-zsh"


## put those here cause ##
##########################
autoload -Uz compinit   ##
compinit                ##
##########################
######## REASONEs ########

## ENHANCD VARS
ENHANCD_FILTER="fzy"
ENHANCD_COMMAND="cd"

## OMZ VARS
DISABLE_AUTO_UPDATE=true

######################################
##            ALIASES               ##
######################################
alias q="exit"
alias vi="vim"
alias vimconf="vi ~/.vimrc"
alias zshconf="vi ~/.zshrc"
alias ls="ls"
alias sl="ls"
alias ll="ls -lh"
alias la="ls -lah"
alias ka="k -a"
alias ..="cd .."
alias ...="cd ../.."
alias nf="neofetch --bold off --block_range 0 7 --colors 4 6 8 3 5 7"
alias raspy="ssh 192.168.2.231"
alias trans="gawk -f <(curl -Ls git.io/translate) -- -shell"


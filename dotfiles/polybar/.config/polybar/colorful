[module/mpd]
type = internal/mpd
format-online = <label-time> %{F#88}|%{F-} <icon-prev><icon-seekb><icon-stop><toggle><icon-seekf><icon-next> <icon-repeat><icon-random> %{F#88}|%{F-} <label-song>
format-online-overline = ${colors.bg}
format-online-foreground = ${colors.fg}
format-online-underline = ${colors.bg}
format-offline = <label-offline>
label-offline = " No music playing "
port = 6601
host= 127.0.0.1

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-seekb = 
icon-seekf = 
icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.fg}
toggle-off-foreground = ${colors.color8}

bar-progress-width = 45
bar-progress-format = %{+o +u}%fill%%{-o -u}%indicator%%{+o +u}%empty%%{-u -o}
bar-progress-indicator = █
bar-progress-indicator-foreground = ${colors.color5}
bar-progress-indicator-font = 2
bar-progress-fill = █
bar-progress-fill-foreground = ${colors.color3}
bar-progress-fill-font = 2
bar-progress-empty = ▒
bar-progress-empty-font = 2
bar-progress-empty-foreground = ${colors.fg}

[module/xwindow]
type = internal/xwindow
label = " %title% "
format-prefix = " "
format-prefix-foreground = ${colors.color3}
label-maxlen = 20
label-foreground = ${colors.fg}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 

label-focused = %icon% %name%
label-focused-foreground = ${colors.color3}
label-focused-padding = 1

label-unfocused = %icon% %name%
label-unfocused-foreground = ${colors.fg}
label-unfocused-padding = 1

label-urgent = %icon% %name%
label-urgent-padding = 1
label-urgent-foreground = ${colors.bg}
label-urgent-background = ${colors.color9}

label-visible = %icon% %name%
label-visible-foreground = ${colors.fg}
label-visible-padding = 1

label-mode-padding = 1 
label-mode-foreground = ${colors.fg}

[module/date]
type = internal/date
interval = 1

date = ""
date-alt = " %b %d, %Y "

time = "%H:%M "
time-alt = "%H:%M:%S "

format-prefix = ""
format-prefix-foreground = ${colors.color5}
format-foreground = ${colors.fg}
label =  %date% %time%
format-label-foreground = ${colors.fg}
format-padding = 1

[module/backlight]
type = internal/xbacklight
format-prefix = " "
format-prefix-foreground = ${colors.color3}
label = "%percentage%"
label-foreground = ${colors.fg}
format-padding = 1

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0
label-connected = %local_ip%
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.color6}
format-connected-padding = 1
format-disconnected =" Not Connected"
format-disconnected-foreground = ${colors.color1}

[module/volume]
type = internal/volume
master-mixer = Master
format-volume = "<label-volume> " 
label-volume = "%percentage% "
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.color4}
label-volume-foreground = ${colors.fg}
label-prefix-foreground = ${colors.fg}
format-muted = "<label-muted> "
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.color7}
format-muted-foreground = ${colors.fg}
label-muted = 0



[module/cpu]
type = internal/cpu
interval = 2
label = " %percentage%% "
format-prefix = " "
